<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/user_head"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主播重案组"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/iv_user_head"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_item_Head_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:textSize="20sp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_excerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="#999"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/iv_jing_hao"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/video_anchor_name"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/iv_jing_hao"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tv_tags"
            android:src="@mipmap/icon_see_count"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_see_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/iv_eye"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_common"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp" />
    </RelativeLayout>
</LinearLayout>