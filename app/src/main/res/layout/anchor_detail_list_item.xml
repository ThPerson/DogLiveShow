<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_anchor_list_item"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@mipmap/list_item_image" />

        <TextView
            android:id="@+id/tv_anchor_detail_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_anchor_list_item"
            android:layout_alignRight="@+id/iv_anchor_list_item"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="0:37"
            android:textColor="@color/cardview_light_background"
            android:textSize="8sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:padding="5dp"
            android:id="@+id/tv_anchor_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="1231231231321"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_anchor_detail_list_small"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_anchor_watch"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/watch_icon"
                android:drawablePadding="5dp"
                android:text="xxxæ¬¡"
                />
            <TextView
                android:id="@+id/tv_anchor_date_time"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="2016-04-07"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>