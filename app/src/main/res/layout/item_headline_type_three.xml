<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_user_head3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/user_head"/>
        <TextView
            android:id="@+id/tv_user_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主播重案组"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/iv_user_head3"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_recommend3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="20sp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_excerpt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#999"
            android:ellipsize="end"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_item_Head_logo3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/iv_jing_hao3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/video_anchor_name"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_tags3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/iv_jing_hao3"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/iv_eye3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tv_tags3"
            android:src="@mipmap/icon_see_count"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_see_count3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/iv_eye3"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_common"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tv_comment_count3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />
    </RelativeLayout>
</LinearLayout>